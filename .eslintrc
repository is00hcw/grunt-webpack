{
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2017,
    "sourceType": "script"
  },
  "env": {
    "node": true
  },
  "rules": {
    "arrow-spacing": ["error", { "before": true, "after": true }],
    "keyword-spacing": [
      "error", {
      "before": true,
      "after": true,
      "overrides": {
        "return": { "after": true },
        "throw": { "after": true },
        "case": { "after": true }
      }
    }],
    "object-curly-spacing": [
      "error", "always"
    ],
    "space-before-blocks": ["error", "always"],
    "space-infix-ops": "error",
    "no-confusing-arrow": "error",
    "key-spacing": [
      "error", { "beforeColon": false, "afterColon": true }],
    "semi": ["error", "always"],
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "no-var": "error",
    "strict": ["error", "global"],
    "prefer-const": "error"
  }
}
